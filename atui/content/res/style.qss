*{font-family: "Microsoft YaHei"; font-size: 16px;}

QSplitter::handle {
    background-color: lightgray
}

QListView {
    background-color: transparent;
    border: none;
    show-decoration-selected: 1;
    outline: none;
}

QListView::item {
    height: 30px;
    text-align: center;
}

QListView::item:alternate {
    background: #EEEEEE;
}

QListView::item:selected {
    border: 1px solid #6a6ea9;
}

QListView::item:hover, QListView::item:selected:!active, QListView::item:selected:active {
    background: steelblue
}

QLabel#titleLabel {
    color: white;
    font-weight: bold;
}

QMenu {
    border: 1px solid lightgray;
    background: white;
    padding: 3px;
}

QMenu::item {
    padding: 2px 25px 2px 20px;
    border: 1px solid transparent;
}

QMenu::item:selected:!enabled {
    border: 1px solid rgb(210, 210, 210);
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,stop: 0 rgb(240, 240, 240), stop: 0.5 rgb(235, 235, 235), stop: 1.0 rgb(230, 230, 230));
}

QMenu::item:selected:enabled {
    border: 1px solid rgb(170, 190, 230);
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,stop: 0 rgb(230, 240, 250), stop: 0.5 rgb(220, 235, 255), stop: 1.0 rgb(210, 230, 255));
}

QMenu::icon:checked {
    background: gray;
    border: 1px inset gray;
    position: absolute;
    top: 1px;
    right: 1px;
    bottom: 1px;
    left: 1px;
}
QMenu::separator {
    height: 1px;
    background: lightgray;
    margin-left: 3px;
    margin-right: 3px;
}

QMenu::indicator {
    width: 13px;
    height: 13px;
}

QComboBox{
    border:1px solid rgb(180, 180, 180);
}

QComboBox QAbstractItemView::item {
    height:30px;
}

QComboBox::down-arrow {
    image:url(:/treeview/arrowBottom.png);
}

QComboBox::drop-down {
    width:20px;
    border:none;
}

QScrollBar:vertical {
    width:15px;
    background:rgba(0,0,0,0);
    padding-bottom:9px;
    background-position: right;
}

QScrollBar::handle:vertical
{
    width:10px;
    background-color: rgba(200, 200, 200, 100)
}

QScrollBar::add-line:vertical
{
    height:0px;width:0px;
    subcontrol-position:bottom;
}

QScrollBar::sub-line:vertical
{
    height:0px;width:0px;
    subcontrol-position:top;
}
